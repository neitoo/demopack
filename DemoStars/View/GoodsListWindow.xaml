<Window x:Class="DemoStars.View.GoodsListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoStars.View"
        mc:Ignorable="d"
        Title="Brawlers" Height="600" Width="1000" MinWidth="920" MinHeight="500" Closing="Window_Closing">
    <Window.Resources>
        <BitmapImage x:Key="noImage" UriSource="/Resources/noimage.jpg"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Margin="10,5" x:Name="upBtn" Content="По возрастанию" Click="upBtn_Click"/>
                <Button Grid.Column="1" Margin="10,5" x:Name="resBtn" Content="Сброс" Click="resBtn_Click"/>
                <Button Grid.Column="2" Margin="10,5" x:Name="downBtn" Content="По убыванию" Click="downBtn_Click"/>
            </Grid>
            <TextBlock x:Name="countElem" Grid.Column="2" FontSize="14" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Column="1" x:Name="listBrawler" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Left" BorderBrush="#00ABADB3" HorizontalContentAlignment="Stretch">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="#FF444444" CornerRadius="5">
                            <Grid Width="{Binding ActualWidth, ElementName=listBrawler}" Background="{Binding solidColorBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0" Width="80" Height="80" Margin="5" Source="{Binding imgPath, FallbackValue={StaticResource noImage}}"/>
                                <TextBlock Grid.Column="1" TextWrapping="Wrap" Margin="0,0,10,0" Text="{Binding fullNameText}" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Grid.Column="2" TextWrapping="Wrap" Margin="0,0,10,0" Text="{Binding descriptionText}" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Grid.Column="3" TextWrapping="Wrap" Margin="0,0,5,0" Text="{Binding vendorText}" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Grid.Column="4" TextWrapping="Wrap" Margin="0,0,5,0" Text="{Binding priceText}" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Grid.Column="5" TextWrapping="Wrap" Margin="0,0,5,0" Text="{Binding discountText}" FontSize="14" FontWeight="Bold"/>
                            </Grid>
                            
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock Grid.Row="0" Grid.Column="2" VerticalAlignment="Top" Margin="10" Text="Фильтрация по скидке" TextAlignment="Center"/>
            <ComboBox x:Name="discountComboBox" Grid.Row="0" Grid.Column="2" Height="30" VerticalAlignment="Top" Margin="10,30,10,10" SelectionChanged="discountComboBox_SelectionChanged">
                <ComboBoxItem IsSelected="True">Все диапазоны</ComboBoxItem>
                <ComboBoxItem>0-10</ComboBoxItem>
                <ComboBoxItem>10-15</ComboBoxItem>
                <ComboBoxItem>>15</ComboBoxItem>
            </ComboBox>
        </Grid>
    </Grid>
</Window>
